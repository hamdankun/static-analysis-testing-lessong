{
    "name": "static-analysis-testing",
    "version": "1.0.0",
    "description": "static analysis testing lesson",
    "main": "index.js",
    "scripts": {
        "build": "babel src --extensions .js,.ts,.tsx --out-dir dist",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
        "check-types": "tsc",
        "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
        "format": "yarn prettier -- --write",
        "format-check": "yarn prettier -- --list-different",
        "validate-code": "yarn check-types && yarn format && yarn format-check && yarn lint && yarn build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hamdankun/static-analysis-testing-lessong.git"
    },
    "keywords": [
        "javascript",
        "testing",
        "eslin",
        "typescript"
    ],
    "author": "hamdan",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/hamdankun/static-analysis-testing-lessong/issues"
    },
    "homepage": "https://github.com/hamdankun/static-analysis-testing-lessong#readme",
    "devDependencies": {
        "@babel/cli": "^7.12.0",
        "@babel/core": "^7.12.0",
        "@babel/preset-env": "^7.12.0",
        "@babel/preset-typescript": "^7.12.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.12.0",
        "prettier": "^2.1.2",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1"
    }
}
